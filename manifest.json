{
  "manifest_version": 3,
  "name": "NMT Interface Enhancer",
  "version": "1.0",
  "description": "Injects custom UI elements to replace dropdowns with sliders and buttons, and adds quick navigation.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://nmt1.neurosequential.com/Reports/Edit/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css"
      ],
      "matches": [
        "https://nmt1.neurosequential.com/*"
      ]
    }
  ]
}